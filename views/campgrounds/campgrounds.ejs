<% include ../partials/header %>



<div class="container">
    <div class="jumbotron text-center mt-4">
        <h1>Adventure camps</h1>
        <h5>For the wanderlust souls...</h5>
        <a class="btn btn-primary mt-2" href="campgrounds/new">New campground</a> 
    </div>
    




    <div class="row"> 
            <% campgrounds.forEach(function(campground){%>
        <div class="col-md-4 col-sm-6">
            <div>
                <div class="card text-center  my-3 my-lg-5">
                        <img src="<%= campground.image %>" class="card-img-top" id="campImg" alt="failed to load img" height="230px">
                    <div class="card-body">
                        <h5 class="card-title"><%= campground.name %></h5>
                        <a class="btn btn-primary" href="/campgrounds/<%= campground._id %>">Find more</a>
                    </div>
                </div>
                    
            </div>
        </div>
            <% }); %>

    </div>







</div>


<% include ../partials/footer %>